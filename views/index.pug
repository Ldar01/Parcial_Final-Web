  form(action="#", method="post")
    input#nombre(type="text", name="nombre", placeholder="Nombre")
    input#especialidad(type="text", name="especialidad", placeholder= "Especialidad")
    input#casos(type="text", name="casos", placeholder= "Casos ganados")
